generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlayerSymbol {
  X
  O
}

model Game {
  id         Int            @id @default(autoincrement())
  playerX    String
  playerO    String
  winner     PlayerSymbol
  boardState Json
  createdAt  DateTime @default(now())

  @@map("game")
}
